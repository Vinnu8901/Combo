  <!-- ===================== -->
  <!-- Toggle JS -->
  <!-- ===================== -->
  <script>
    const tabPom = document.getElementById("tabPom");
    const tabApi = document.getElementById("tabApi");

    // POM Studio tab clicked
    tabPom.addEventListener("click", ()=>{
      tabPom.classList.add("active");
      tabApi.classList.remove("active");
      document.getElementById("pomWorkspace").style.display = "block";
      document.getElementById("pomSidebar").style.display = "block";
      document.getElementById("apiWorkspace").style.display = "none";
      document.getElementById("apiSidebar").style.display = "none";
    });

    // API Studio tab clicked
    tabApi.addEventListener("click", ()=>{
      tabApi.classList.add("active");
      tabPom.classList.remove("active");
      document.getElementById("pomWorkspace").style.display = "none";
      document.getElementById("pomSidebar").style.display = "none";
      document.getElementById("apiWorkspace").style.display = "block";
      document.getElementById("apiSidebar").style.display = "block";
    });
  </script>

  <!-- ===================== -->
